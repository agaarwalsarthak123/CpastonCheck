<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="151dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="86dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:text="Longitude:"
            android:textSize="15dp" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="61dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:text="Latitude:"
            android:textSize="15dp" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:text="Condition of the book:"
            android:textSize="15dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:text="Name:"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/pdfRl"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/ic_email_gray" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/people" />

        </RelativeLayout>

        <TextView
            android:id="@+id/donerTv"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="154dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:maxLines="1"
            android:text="Doner name" />

        <TextView
            android:id="@+id/conditionTv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donerTv"
            android:layout_marginStart="154dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Condition" />

        <TextView
            android:id="@+id/latTv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="147dp"
            android:layout_height="20dp"
            android:layout_below="@+id/conditionTv"
            android:layout_marginStart="154dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Latitude of the doner: " />

        <TextView
            android:id="@+id/longTv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="146dp"
            android:layout_height="21dp"
            android:layout_below="@+id/latTv"
            android:layout_marginStart="155dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Longitude of the doner: " />

        <TextView
            android:id="@+id/bookTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="Book" />

        <TextView
            android:id="@+id/sizeTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_below="@+id/donerTv"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="87dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/bookTv"
            android:layout_toEndOf="@+id/pdfRl"
            android:maxLines="1"
            android:text="13 MB" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="110dp"
            android:layout_toEndOf="@+id/pdfRl"
            android:text="Picture Size:" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>